<odoo>
    <record id="view_stock_picking_email_wizard" model="ir.ui.view">
        <field name="name">stock.picking.email.wizard.form</field>
        <field name="model">stock.picking.email.wizard</field>
        <field name="arch" type="xml">
            <form string="Send Email Confirmation">
                <group>
                    <field name="message" readonly="1"/>
                </group>
                <footer>
                    <button string="Send Email" type="object" name="send_email" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
