<odoo>
    <data>
        <record id="email_template_stock_picking" model="mail.template">
            <field name="name">Stock Picking Overdue Notification</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="subject">Overdue Stock Picking</field>
            <field name="email_from">${(user.email_formatted or '')|safe}</field>
            <field name="email_to">michealleadmin@example.com</field>
            <field name="body_html">
                <![CDATA[
                    <p>Hello,</p>
                    <p>This is a notification that stock picking <strong>${object.name}</strong> is overdue by more than 2 weeks.</p>
                    <p>Best regards,<br/>Your Company</p>
                ]]>
            </field>
        </record>
    </data>
</odoo>
