<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_stock_picking_wizard" model="ir.ui.view">
        <field name="name">stock.picking.wizard.form</field>
        <field name="model">stock.picking.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Email Sending">
                <group>
                    <field name="message" readonly="1"/>
                </group>
                <footer>
                    <button string="Send Email" type="object" name="action_send_email" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
